<h1>Update <%=@task.description() %> </h1>

<form action="/tasks/<%= @task.id() %>" method="post">
    <input name="_method" type="hidden" value="patch">
  <label for="description">Rename your task:</label>
    <input id="description" name="description" value="<%=@task.description%>"type="text">

    <input type="checkbox" name="done" value=true>done?
  <button type="submit">Update</button>
</form>

<form action="/tasks/<%= @task.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button class="btn btn-danger" type="submit">Delete task</button>
</form>
